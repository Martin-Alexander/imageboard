<p><%= link_to "BACK", threads_path %></p>
<h2><%= @thread.title %></h2>
<p><%= @thread.content %></p>
<hr>

<p>Submit a Comment:</p>
<%= simple_form_for [@thread, Post.new], url: post_create_path do |i| %>
  <%= i.input :content, label: false, :input_html => { class: 'text', :cols => 40, :rows => 5 } %>
  <%= i.submit "Submit" %>
<% end %>

<table>
  <% @thread.posts.each do |i| %>
    <tr>
      <td><p><%= i.upvotes %></p></td>
      <td><p><%= i.content %></p></td>
    </tr>
  <% end %>
</table>

